@model Item
<form method="post" asp-action="Edit" enctype="multipart/form-data">
  <div class="border p-3 mt-4">
    <div class="text-primary text-center"> @Model.Name ویرایش </div>
    <hr />
  </div>
  <div asp-validation-summary="All"></div>
  <div class="mb-3">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control">
    <span asp-validation-for="Name" class="text-danger"></span>

  </div>
  <div class="mb-3">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label asp-for="Price"></label>
    <input asp-for="Price" class="form-control">
    <span asp-validation-for="Price" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="ImageName"></label>
    <input asp-for="ImageName" class="form-control">
    <span asp-validation-for="ImageName" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label asp-for="Quantity"></label>
    <input asp-for="Quantity" class="form-control">
    <span asp-validation-for="Quantity" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <input placeholder=@Model.ImageName asp-for="ImageFile" id="imagePicker" accept="image/*" class="form-control">
    <label id="lbl"></label>
    <span asp-validation-for="ImageFile" class="text-danger"></span>
  </div>
  <div style="width: 200px; height:200px;" class="mb-3">
    <img src="~/Images/@Model.ImageName" class="card-img-top" id="image" height="200px" alt="...">
  </div>

  <button type="submit" class="btn btn-primary" style="width: 150px;">ثبت</button>
  <a asp-controller="Item" asp-action="Index" class="btn btn-primary" style="width: 150px">
    Back to list
  </a>
</form>

<script>

  const imagePicker = document.getElementById('imagePicker');
  const image = document.getElementById('image');
  imagePicker.addEventListener('change', () => {
    lbl.innerText = imagePicker.value;
    image.src = URL.createObjectURL(imagePicker.files[0]);
  })
</script>